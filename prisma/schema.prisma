generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id          String  @db.Uuid()
  name        String  @db.VarChar(255)
  number      Int     @db.Integer()
  createdBy   String  @db.Uuid()
  validatedBy String? @db.Uuid()

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  validatedAt DateTime? @db.Timestamp()

  user          User  @relation(name: "fk_tickets_createdBy", fields: [createdBy], references: [id])
  userValidated User? @relation(name: "fk_tickets_validatedBy", fields: [validatedBy], references: [id])

  @@id([id], map: "pk_tickets")
  @@map("tickets")
}

model User {
  id       String @db.Uuid()
  username String @unique @db.VarChar(50)
  password String @db.VarChar

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdTickets   Ticket[] @relation(name: "fk_tickets_createdBy")
  validatedTickets Ticket[] @relation(name: "fk_tickets_validatedBy")

  @@id([id], map: "pk_users")
  @@map("users")
}
